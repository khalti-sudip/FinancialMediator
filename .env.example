# Django Core Settings
DJANGO_SECRET_KEY=your-django-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/financialmediator
# For SQLite: DATABASE_URL=sqlite:///financialmediator.db

# Redis and Caching
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300  # Cache timeout in seconds

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=30  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1  # days

# API Configurations
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_DURATION=60  # seconds

# Banking Provider Configurations
BANKING_API_URL=https://api.bankingprovider.com/v1
BANKING_API_KEY=your-banking-api-key
BANKING_WEBHOOK_SECRET=your-webhook-secret

# Payment Provider Configurations
PAYMENT_API_URL=https://api.paymentprovider.com/v2
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret

# Logging Configuration
LOG_LEVEL=DEBUG  # Set to INFO in production
LOG_DIR=logs

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_MULTIPROC_DIR=prometheus_multiproc
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@financialmediator.com
